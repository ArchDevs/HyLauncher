{
  "app-id": "fun.hylauncher.HyLauncher",
  "runtime": "org.gnome.Platform",
  "runtime-version": "46",
  "sdk": "org.gnome.Sdk",
  "command": "HyLauncher",
  "finish-args": [
    "--share=ipc",
    "--socket=fallback-x11",
    "--socket=wayland",
    "--socket=pulseaudio",
    "--share=network",
    "--filesystem=home",
    "--filesystem=xdg-documents",
    "--filesystem=xdg-download",
    "--talk-name=org.freedesktop.Notifications"
  ],
  "modules": [
    {
      "name": "HyLauncher",
      "buildsystem": "simple",
      "build-commands": [
        "install -Dm755 HyLauncher /app/bin/HyLauncher",
        "install -Dm644 fun.hylauncher.HyLauncher.png /app/share/icons/hicolor/256x256/apps/fun.hylauncher.HyLauncher.png",
        "install -Dm644 fun.hylauncher.HyLauncher.desktop /app/share/applications/fun.hylauncher.HyLauncher.desktop"
      ],
      "sources": [
        { "type": "file", "path": "HyLauncher" },
        { "type": "file", "path": "fun.hylauncher.HyLauncher.png" },
        { "type": "file", "path": "fun.hylauncher.HyLauncher.desktop" }
      ]
    }
  ],
  "metadata": {
    "name": "HyLauncher",
    "summary": "Unofficial Hytale Launcher",
    "description": "HyLauncher is a advanced Hytale Launcher with many unique features",
    "license": "GPL-3.0-or-later",
    "homepage": "https://hylauncher.fun",
    "categories": ["Game", "Utility"]
  }
}